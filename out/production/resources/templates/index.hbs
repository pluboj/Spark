{{#partial "content"}}
    {{#if username }}
        <h1>Welcome {{ username }}!</h1>

        <p>View <a href="/ideas"> all comments</a>.</p>
    {{ else }}
        <h1>Welcome!</h1>

        <form action="/sign-in" method="post">
            <input type="text" placeholder="User name" name="username" />
            <button>Sign in</button>
        </form>
    {{/if}}
{{/partial}}

{{> base.hbs}}
{{#partial "content"}}
    <h1>Current Comments</h1>

    <ul>
        {{#each ideas}}
            <li>
                <form action="/ideas/{{ slug }}/vote" method="post" >
                    <a href="/ideas/{{ slug }}">{{ title }}</a> ( {{ voteCount }} votes) <button>Vote</button>
                </form>
            </li>
        {{/each}}
    </ul>

    <form action="/ideas" method="post">
        <input type="text" placeholder="Add comment" name="title">
        <button>Post</button>
    </form>
{{/partial}}


{{> base.hbs}}